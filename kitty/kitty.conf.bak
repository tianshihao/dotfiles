# Navigation
map ctrl+shift+left previous_tab
map ctrl+shift+right next_tab

map ctrl+shift+up previous_window
map ctrl+shift+down next_window

map ctrl+shift+k scroll_line_up
map ctrl+shift+j scroll_line_down

# map ctrl+shift+j previous_tab
# map ctrl+shift+k next_tab


# Tab
map ctrl+shift+m set_tab_title

# Tab bar
active_tab_foreground   #000
active_tab_background   #70C2B3
active_tab_font_style   bold-italic
inactive_tab_foreground #444
inactive_tab_background #eee
inactive_tab_font_style normal

# BEGIN_KITTY_THEME
# Night Owl
include current-theme.conf
# END_KITTY_THEME

# Font
# font_family FiraCode-Retina
font_family family="OxProto Nerd Font"
bold_font auto
italic_font auto
bold_italic_font auto

font_features FiraCode-Retina +zero +onum
font_features FiraCode-Bold +zero

# Cursor
cursor_shape underline
ursor_underline_thickness 3
cursor_blink_interval 0.5


# Shell Integration
shell_integration no-cursor

